<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeFragmentViewModel"
            type="com.enigmacamp.goldmarket.ui.main.viewmodel.HomeFragmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.view.fragments.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/label_user_gold_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Emas kamu senilai"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/user_gold_amount_rp_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@{@string/number_format(homeFragmentViewModel.customerGoldInRp)}"
                    android:textColor="@color/accent"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_gold_amount_gram_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@{@string/gram_format(homeFragmentViewModel.customerBalance.goldInGram)}"
                    android:textColor="@color/accent"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/rounded_top_shape"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/sub_label_beli_emas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga beli saat ini /gr"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/buying_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@{@string/number_format(homeFragmentViewModel.goldPrice.buyingPrice)}"
                        android:textColor="@color/accent"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buy_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/accent"
                        android:drawableTop="@android:drawable/ic_menu_upload"
                        android:drawablePadding="4dp"
                        android:text="Beli Emas"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/sub_label_jual_emas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga jual saat ini /gr"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/selling_price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@{@string/number_format(homeFragmentViewModel.goldPrice.sellingPrice)}"
                        android:textColor="@color/accent"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/sell_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/accent"
                        android:drawableTop="@android:drawable/ic_menu_more"
                        android:drawablePadding="4dp"
                        android:text="Jual Emas"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>